#!/bin/bash
#
#  curl commands to reload the data from the previous tutorial
#
#

set -e

printf "‚è≥ Loading context data "

#
# Create four Store Entities in various locations across Berlin
#
curl -s -o /dev/null POST \
  'http://orion:1026/v2/op/update' \
  -H 'Content-Type: application/json' \
  -g -d '{
  "actionType": "append",
  "entities": [
        {
           "id":"urn:ngsi-ld:Streetlight:streetlight:001",
           "type":"Streetlight",
           "location":{
                  "type":"geo:json",
                  "value":{
                         "type":"Point",
                         "coordinates":[
                                13.3986,
                                52.5547
                         ]
                  }
           },
           "address":{
                  "type":"PostalAddress",
                  "value":{
                         "streetAddress":"2, Connaught Place",
                         "addressRegion":"Delhi",
                         "addressLocality":"New Delhi",
                         "postalCode":"110001"
                  }
           },
           "name":{
                  "type":"Text",
                  "value":"Streelight 1"
           },
           "areaServed":{
                  "type":"Property",
                  "value":"Connaught Place 1"
           },
           "status":{
                  "type":"Property",
                  "value":"ok"
           },
           "circuit":{
                  "type":"Property",
                  "value":"C-456-A467"
           },
           "lanternHeight":{
                  "type":"Property",
                  "value":10
           },
           "locationCategory":{
                  "type":"Property",
                  "value":"centralIsland"
           },
           "powerState":{
                  "type":"Property",
                  "value":"off"
           },
           "controllingMethod":{
                  "type":"Property",
                  "value":"individual"
           },
           "dateLastLampChange":{
                  "type":"Property",
                  "value":{
                         "datetime":"2016-07-08T08:02:21.753Z"
                  }
           }
        },
                {
           "id":"urn:ngsi-ld:Streetlight:streetlight:002",
           "type":"Streetlight",
           "location":{
                  "type":"geo:json",
                  "value":{
                         "type":"Point",
                         "coordinates":[
                                13.3903,
                                52.5075
                         ]
                  }
           },
           "address":{
                  "type":"PostalAddress",
                  "value":{
                         "streetAddress":"7, IGI Terminal1",
                         "addressRegion":"New Delhi",
                         "addressLocality":"IGI Airport",
                         "postalCode":"110003"
                  }
           },
           "name":{
                  "type":"Text",
                  "value":"Streelight 2"
           },
           "areaServed":{
                  "type":"Property",
                  "value":"IGI Airport"
           },
           "status":{
                  "type":"Property",
                  "value":"ok"
           },
           "circuit":{
                  "type":"Property",
                  "value":"C-456-A467"
           },
           "lanternHeight":{
                  "type":"Property",
                  "value":10
           },
           "locationCategory":{
                  "type":"Property",
                  "value":"Airport"
           },
           "powerState":{
                  "type":"Property",
                  "value":"off"
           },
           "controllingMethod":{
                  "type":"Property",
                  "value":"individual"
           },
           "dateLastLampChange":{
                  "type":"Property",
                  "value":{
                         "datetime":"2017-07-18T08:02:21.753Z"
                  }
           }
        }

  ]
}'

#
# Add Weather and Twitter Responses for Store 1 using random values
#
curl -s -o /dev/null POST \
  http://orion:1026/v2/registrations \
  -H 'Content-Type: application/json' \
  -d '{
   "description": "Weather Conditions",   
   "dataProvided": {
     "entities": [
       {
         "id" : "urn:ngsi-ld:Streetlight:streetlight:001",
         "type": "Store"
       }
     ],
     "attrs": [
      "temperature", "relativeHumidity"
    ]
   },
   "provider": {
     "http": {
       "url": "http://context-provider:3000/proxy/v1/random/weatherConditions"
     },
     "legacyForwarding": true
   },
   "status": "active"
}'

curl -s -o /dev/null POST \
  http://orion:1026/v2/registrations \
  -H 'Content-Type: application/json' \
  -d '{
   "description": "Tweeting Cat Facts",
   "dataProvided": {
     "entities": [
       {
         "id" : "urn:ngsi-ld:Streetlight:streetlight:001",
         "type": "Store"
       }
     ],
     "attrs": [
      "tweets"
    ]
   },
   "provider": {
     "http": {
       "url": "http://context-provider:3000/proxy/v1/catfacts/tweets"
     },
     "legacyForwarding": true
   },
   "status": "active"
}'


