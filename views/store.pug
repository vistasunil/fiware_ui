extends layout

include product

block content
  h1= title
  div
    div(style="float:left; border-width:1px; border:solid; padding:2px; background: #efefef;")
      img(src=`${store.mapUrl}`)
      small(style="display: inherit")
        a(href="https://www.openstreetmap.org/copyright")
          | Â© OpenStreetMap contributors
    div(style="float:left; padding:20px; border:none;")
      name
        strong Name: 
        | #{store.name} #[br]
      address
        strong StreetAddress: 
        | #{store.address.streetAddress} #[br]
        strong Locality: 
        | #{store.address.addressLocality} #[br]
        strong Pincode: 
        | #{store.address.postalCode} #[br]
        strong Region: 
        | #{store.address.addressRegion} #[br]
        strong Area Served: 
        | #{store.areaServed} #[br]
        strong Circuit: 
        | #{store.circuit} #[br]
        strong Lantern Height: 
        | #{store.lanternHeight} #[br]
        strong Location Category: 
        | #{store.locationCategory} #[br]
        strong Power State: 
        | #{store.powerState} #[br]
        strong Controlling Method: 
        | #{store.controllingMethod} #[br]
        strong Date Last Lamp Change: 
        | #{store.dateLastLampChange.datetime} #[br]
